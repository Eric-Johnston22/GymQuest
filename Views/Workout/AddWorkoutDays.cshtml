@model GymQuest.Models.ViewModels.AddWorkoutDaysViewModel

@{
    ViewData["Title"] = "Add Workout Days";
}

<h2>Add Workout Days</h2>

<form asp-action="AddWorkoutDays" method="post">
    <input type="hidden" asp-for="WorkoutRoutineId" />

    @for (int i = 0; i < Model.WorkoutDays.Count; i++)
    {
        <div class="form-group">
            <label asp-for="WorkoutDays[i].DayId">Select Day:</label>
            <select asp-for="WorkoutDays[i].DayId" class="form-control">
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
                <option value="6">Saturday</option>
                <option value="7">Sunday</option>
            </select>
            <span asp-validation-for="WorkoutDays[i].DayId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WorkoutDays[i].WorkoutType">Workout Type:</label>
            <input asp-for="WorkoutDays[i].WorkoutType" class="form-control" />
            <span asp-validation-for="WorkoutDays[i].WorkoutType" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Next</button>
</form>
