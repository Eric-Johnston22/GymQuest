@model GymQuest.Models.ViewModels.AssignExercisesViewModel

@{
    ViewData["Title"] = "Assign Exercises";
}

<h2>Assign Exercises to Each Workout Day</h2>

<form asp-action="AssignExercises" method="post">
    <input type="hidden" asp-for="WorkoutRoutineId" />

    @foreach (var day in Model.WorkoutDays)
    {
        <h3>@day.DayName</h3>

        @for (int i = 0; i < day.PlannedExercises.Count; i++)
        {
            <div class="form-group">
                <label asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].ExerciseId">Exercise:</label>
                <select asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].ExerciseId" class="form-control">
                    <option value="">-- Select Exercise --</option>
                    @foreach (var exercise in ViewBag.Exercises)
                    {
                        <option value="@exercise.ExerciseId">@exercise.Name</option>
                    }
                </select>
                <span asp-validation-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].ExerciseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Sets">Sets:</label>
                <input asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Sets" class="form-control" />
                <span asp-validation-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Sets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Reps">Reps:</label>
                <input asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Reps" class="form-control" />
                <span asp-validation-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Reps" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Weight">Weight (lbs):</label>
                <input asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Weight" class="form-control" />
                <span asp-validation-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Weight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Notes">Notes (optional):</label>
                <textarea asp-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Notes" class="form-control"></textarea>
                <span asp-validation-for="WorkoutDays[@Model.WorkoutDays.IndexOf(day)].PlannedExercises[i].Notes" class="text-danger"></span>
            </div>
        }
    }

    <button type="submit" class="btn btn-primary">Next</button>
</form>
